{
  "name": "api",
  "module": "src/index.ts",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --hot ./src/index.ts",
    "start": "bun ./src/index.ts",
    "build": "bun build ./src/index.ts --outdir ./dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist node_modules",
    "check:type": "tsgo --noEmit",
    "db:generate": "cd src/lib && bun run db:generate",
    "db:migrate:dev": "cd src/lib && bun run db:migrate:dev",
    "db:migrate:deploy": "cd src/lib && bun run db:migrate:deploy",
    "db:migrate:reset": "cd src/lib && bun run db:migrate:reset",
    "db:studio": "cd src/lib && bun run db:studio",
    "db:seed": "cd src/lib && bun run db:seed"
  },
  "dependencies": {
    "@api/lib": "workspace:*",
    "@hono/zod-validator": "^0.7.6",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "@prisma/client-runtime-utils": "^7.3.0",
    "dayjs": "^1.11.19",
    "hono": "^4.11.4",
    "jose": "^6.1.3",
    "pg": "^8.17.2",
    "pino": "^10.2.1",
    "pino-pretty": "^13.1.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@quramy/prisma-fabbrica": "^2.3.3",
    "@types/bun": "latest",
    "@types/pg": "^8.16.0",
    "@vitest/coverage-v8": "^4.0.18",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
