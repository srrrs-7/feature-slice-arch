{
  "name": "play-devcontainer",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "apps/*",
    "apps/api/src/lib",
    "packages/*"
  ],
  "packageManager": "bun@1.3.5",
  "scripts": {
    "dev": "bun run dev:api & bun run dev:web",
    "dev:api": "cd apps/api && bun run dev",
    "dev:web": "cd apps/web && bun run dev",
    "build:api": "cd apps/api && bun run build",
    "build:web": "cd apps/web && bun run build",
    "test:run": "cd apps/api && bun run test",
    "db:migrate:dev": "cd apps/api && bun run db:migrate:dev",
    "db:migrate:reset": "cd apps/api && bun run db:migrate:reset",
    "db:migrate:deploy": "cd apps/api && bun run db:migrate:deploy",
    "db:seed": "cd apps/api && bun run db:seed",
    "db:generate": "cd apps/api && bun run db:generate",
    "clean": "bun --workspaces clean",
    "check:type": "bun --workspaces check:type",
    "format": "biome format --write",
    "check": "bun run check:spell && bun run check:type && bun run check:biome",
    "check:biome": "biome check --write",
    "check:spell": "cspell lint . --gitignore --report=simple --dot",
    "husky": "husky",
    "version:check": "bun update -ir --latest --check",
    "storybook": "cd packages/storybook && bun run dev",
    "storybook:build": "cd packages/storybook && bun run build"
  },
  "dependencies": {
    "@biomejs/biome": "^2.3.10",
    "cspell": "^9.4.0",
    "husky": "^9.1.7"
  },
  "devDependencies": {
    "@bun-security-scanner/osv": "^1.0.0",
    "@typescript/native-preview": "^7.0.0-dev.20251226.1"
  },
  "overrides": {
    "hono": "4.11.4",
    "@smithy/config-resolver": "^4.4.0"
  }
}
