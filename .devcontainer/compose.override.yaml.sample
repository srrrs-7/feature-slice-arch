services:
  dev:
    environment:
      DB_HOST: db
      DB_PORT: 5432
      DB_DBNAME: mydb
      DB_USERNAME: postgres
      DB_PASSWORD: postgres
      BUN_PUBLIC_API_URL: http://localhost:8080
      NODE_ENV: development
      LOG_LEVEL: debug  # silent, error, warn, info, debug
  db:
    environment:
      POSTGRES_DB: mydb
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: postgres
    ports:
      - 5432:5432
